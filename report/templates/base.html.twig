<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/logotyp.png') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/IMG_3826.JPG') }})">
            <span class="site-title">My Symfony Site</span>
        <nav class= 'navbar'>
            <ul>
                <li class='nav-title'><a href="{{ path('me') }}">Me</a></li>
                <li class='nav-title'><a href="{{ path('about') }}">About</a></li>
                <li class='nav-title'><a href="{{ path('report') }}#kmom01, #kmom02, #kmom03, #kmom04, #kmom05, #kmom06, #kmom07/10">Report</a></li>
                <li class= 'nav-title'><a href="{{ path('lucky_number') }}">Lucky</a></li>
            </ul>
        </nav>
        </header>

    <main>{% block body %} {% endblock %}</main>

    <footer class="site-footer" style="background-image: url({{ asset('img/IMG_3826.JPG') }})"></footer>
    </body>
</html>
